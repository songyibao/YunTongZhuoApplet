/* pages/tabbar/deskmate/deskmate.wxss */
page{
  width: 100%;
  height: 100%;
}
.page_view{
  width: 100%;
  height: 100%;
  padding: 3%;
  padding-top: 0;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.border {
  width: 100%;
  height: 2rpx;
  border-bottom: 2rpx solid rgb(199, 199, 199);
  margin-bottom: 20rpx;
  font-family: 'zhehei';
  color: #87C5D3;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 0rpx 15rpx 3rpx rgb(199, 199, 199);
}
.holder{
  width: 100%;
  height: auto;
  background: #ABD6E1;
  border-radius: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 0rpx 15rpx 1rpx rgb(199, 199, 199);
}
.button{
  font-family: 'zhehei';
  width: 80%;
  background: #33A9BF;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 30rpx;
  color: white;
}
.av_holder{
  display: flex;
  justify-content: center;
  align-items: center;
}
.button_hover {
  background: #76afb9;
}