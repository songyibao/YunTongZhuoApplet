/* pages/tabbar/deskmate/mydeskmate/mydeskmate.wxss */
page{
  width: 100%;
  height: 100%;
  /* padding:  0% 2% 2% 2%; */
  background: #999a9e1a;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
}
.banner {
  /* font-family: 'zhehei'; */
  color: #ffffff;
  box-sizing: border-box;
  width: 100%;
  background: #ABD6E1;
  height: 390rpx;
  border-radius: 0rpx 0rpx 40rpx 40rpx;
  padding: 0rpx 20rpx 10rpx 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-shadow: 0rpx 0rpx 15rpx 2rpx rgb(199, 199, 199);
}
.detail{
  color: #ffffff;
  box-sizing: border-box;
  width: 100%;
  background: #ABD6E1;
  height: 390rpx;
  border-radius: 30rpx;
  padding: 20rpx;
  margin-bottom: 30rpx;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  box-shadow: 0rpx 0rpx 15rpx 2rpx rgb(199, 199, 199);
}
.avatar {
  box-shadow: 0px 0px 5px #888888;
  box-sizing: border-box;
  width: 160rpx;
  height: 160rpx;
  border-radius: 80rpx;
  margin-left: 20rpx;
  /* overflow: hidden; */
}

.info {
  flex-grow: 1;
  box-sizing: border-box;
  height: 200rpx;
  padding: 36rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: flex-start;
  /* align-content: flex-start; */
  /* overflow: hidden; */
}
.item1{
  font-family:sans-serif;
  color: #34a9bf;
  background: white;
  height: 80rpx;
  width: 200rpx;
  border-radius: 30rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.usermotto {
  width: 100%;
  margin-bottom: 30rpx;
  text-align: center;
}

.user-motto {
  width: 100%;
  font-size: 60px;
}

.tips {
  width: 80%;
  font-size: 10px;
  color:rgb(156, 156, 156);
  margin: 0 auto;
  text-align: center;
}
