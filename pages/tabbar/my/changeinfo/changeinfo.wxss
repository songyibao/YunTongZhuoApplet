/* pages/register/register.wxss */
page {
  width: 100%;
  height: 100%;
  box-sizing: border-box;
  padding: 3%;
  box-sizing: border-box;
  display: flex;
  background-color: #999a9e1a;
  flex-direction: column;
}

.panel {
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  align-items: center;
  border-radius: 15rpx;
  /*padding: 1%;*/
  /*background: white;*/
}

.submit {
  background: #3B87F7;
  color: white;
  margin-top: 26rpx;
  width: 50%
}

.container {
  margin-bottom: 2rpx;
  background: white;
  height: 160rpx;
  width: 100%;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 2rpx 15rpx 2rpx 15rpx;
}

.item_hd {
  width: 20%;
  text-align: left;
  border-right: 1rpx solid #BDBDBD;
}

.item_bd {
  padding-left: 20rpx;
  width: 0;
  flex-grow: 1;
  text-align: left;
}

.item_ft {
  border-left: 1rpx solid #BDBDBD;
  padding-left: 20rpx;
  width: fit-content;
}
.holder {
  /* background-color: white;*/
  width: 100%;
  box-sizing: border-box;
  background-color: white;
  border-radius: 15rpx 15rpx 15rpx 15rpx;
  padding: 15rpx;
  height: 400rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}